// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Django Remote Attach",
    "name": "Django Remote Attach",
    "adapter": "Debugpy",
    "request": "attach",
    "connect": {
      "port": 5678,
      "host": "127.0.0.1"
    },
    "pathMappings": [
      {
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app"
      }
    ],
    "justMyCode": false,
    "django": true
  },
  {
    "label": "Worker",
    "name": "Worker",
    "adapter": "Debugpy",
    "request": "attach",
    "connect": {
      "port": 5679,
      "host": "127.0.0.1"
    },
    "pathMappings": [
      {
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app"
      }
    ],
    "justMyCode": false,
    "django": true
  }
]
